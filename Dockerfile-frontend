# Stage 1: Build the Angular app
FROM node:lts-alpine AS frontend-build
WORKDIR /app
COPY package*.json ./
RUN npm install --silent
COPY . .
RUN npm run build -- --configuration=production --base-href=/

# --- Stage 2: Serve the Angular app with Nginx ---
FROM nginx:alpine

# Remove default nginx config
RUN rm /etc/nginx/conf.d/default.conf


# CRITICAL FIX: Copy the custom nginx.conf file into the container
# This configuration contains the /api/ reverse proxy rule.
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Copy the built files from the build stage to Nginx's web root
COPY --from=frontend-build /app/dist/tsr/browser /usr/share/nginx/html

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
